{
  "name": "depmender",
  "version": "1.0.0",
  "description": "A CLI tool that scans JavaScript/TypeScript projects for dependency issues and fixes them",
  "main": "dist/index.js",
  "bin": {
    "depmender": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "npm run build"
  },
  "keywords": [
    "dependency",
    "npm",
    "yarn",
    "pnpm",
    "security",
    "cli",
    "package-manager",
    "vulnerability",
    "outdated",
    "audit"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "node-fetch": "^2.7.0",
    "ora": "^5.4.1",
    "semver": "^7.7.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^20.8.0",
    "@types/node-fetch": "^2.6.6",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.50.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
